{
    "extends": "@tsconfig/node14/tsconfig.json",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "outDir": "lib",
        "rootDir": "src",
        "strict": true,
        "types": [
            "node"
        ],
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": [
        "./src/",
    ],
    "exclude": [
        "node_modules"
    ]
}